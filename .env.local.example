# ============================================
# 입주해 (Ipjuhae) 환경변수 설정
# ============================================

# Database (필수)
DATABASE_URL=postgresql://user:password@localhost:5432/ipjuhae

# JWT (필수 - 프로덕션에서 반드시 변경)
# 32자 이상의 랜덤 문자열: openssl rand -base64 32
JWT_SECRET=your-secure-random-string-at-least-32-chars

# App URL (필수)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Node Environment
NODE_ENV=development

# ============================================
# 외부 서비스 (선택적)
# ============================================

# OpenAI (선택 - 없으면 Mock 자기소개서 생성)
OPENAI_API_KEY=your_openai_api_key

# Sentry 에러 로깅 (선택)
SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx
NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# 소셜 로그인 (선택적)
# ============================================

# 카카오
KAKAO_CLIENT_ID=your_kakao_rest_api_key
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# 네이버
NAVER_CLIENT_ID=your_naver_client_id
NAVER_CLIENT_SECRET=your_naver_client_secret

# 구글
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# ============================================
# SMS/이메일 (프로덕션에서 필요)
# ============================================

# SMS Provider (NHN Cloud / Twilio / AWS SNS)
# SMS_PROVIDER=nhn
# NHN_SMS_APP_KEY=your_nhn_app_key
# NHN_SMS_SECRET_KEY=your_nhn_secret_key
# NHN_SMS_SENDER=01012345678

# Email Provider (Resend / SendGrid / AWS SES)
# EMAIL_PROVIDER=resend
# RESEND_API_KEY=your_resend_api_key
# EMAIL_FROM=noreply@yourdomain.com

# ============================================
# 파일 업로드 (프로덕션에서 필요)
# ============================================

# Storage Provider: 'mock' | 's3' (기본: mock)
# STORAGE_PROVIDER=s3

# S3 / Cloudflare R2
# S3_BUCKET=your-bucket-name
# S3_REGION=ap-northeast-2
# S3_ACCESS_KEY_ID=your_access_key
# S3_SECRET_ACCESS_KEY=your_secret_key
# S3_ENDPOINT=https://xxx.r2.cloudflarestorage.com  # R2 사용시

# ============================================
# 인증 API (프로덕션에서 필요)
# ============================================

# Verification Provider: 'mock' | 'codef' | 'nice' (기본: mock)
# VERIFICATION_PROVIDER=codef

# CODEF API (재직/소득/신용 인증)
# https://codef.io 에서 발급
# CODEF_CLIENT_ID=your_codef_client_id
# CODEF_CLIENT_SECRET=your_codef_client_secret
# CODEF_PUBLIC_KEY=-----BEGIN PUBLIC KEY-----\nMIIBI...\n-----END PUBLIC KEY-----
# CODEF_API_BASE=https://api.codef.io  # 또는 테스트: https://development.codef.io

# NICE 본인인증
# https://www.nicepay.co.kr 에서 발급
# NICE_CLIENT_ID=your_nice_client_id
# NICE_CLIENT_SECRET=your_nice_client_secret
